{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "noEmitOnError": false,
    "types": []
  },
  "include": ["src/**/*", "styles/**/*", "**/*.astro"],
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*"]
}
